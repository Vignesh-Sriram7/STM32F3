#ifndef TASK_H
#define TASK_H

#include <stdint.h>

typedef void (*TaskFunction)(void);

typedef struct {
    TaskFunction run;
    uint32_t interval_ms;
    uint32_t next_run;
} Task;

void scheduler_init(void);
void scheduler_add(TaskFunction func, uint32_t interval);
void scheduler_run(void);

#endif




