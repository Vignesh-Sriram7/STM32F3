#ifndef INC_MILLIS_H_
#define INC_MILLIS_H_
#include "stm32f3xx.h"

static volatile uint32_t tick_count = 0;

void SysTick_Handler(void) {
    tick_count++;
}

uint32_t millis(void) {
    return tick_count;
}

void millis_init(void) {
    SysTick_Config(SystemCoreClock / 1000); // 1ms tick
}



#endif /* INC_MILLIS_H_ */
